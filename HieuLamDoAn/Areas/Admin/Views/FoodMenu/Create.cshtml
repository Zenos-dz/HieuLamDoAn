@model HieuLamDoAn.Models.FoodMenu
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main int id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm mới món ăn</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới món ăn</h2>
        </div>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
               @*  <div class="form-group col-md-6">
                    <label asp-for="FoodID">FoodID</label>
                    <input type="text" class="form-control mb-3" asp-for="FoodID" placeholder="Nhập mã thức ăn">
                    <span asp-validation-for="FoodID" class=" alert-danger"></span>
                </div> *@
                <div class="form-group col-md-6">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Nhập tên món ăn">
                    <span asp-validation-for="Title" class=" alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    
                     <div class="form-group col-md-6">
						<label asp-for="TypeFoodID">TypeFoodID</label>
						<input type="text" class="form-control mb-3" asp-for="TypeFoodID" placeholder="Nhập mã loại thức ăn">
						<span asp-validation-for="TypeFoodID" class=" alert-danger"></span>
					</div> 
                    
                    <div class="form-group col-md-6">
                        <label asp-for="Contents">Contents</label>
                        <input type="text" class="form-control mb-3" asp-for="Contents" placeholder="Nhập mô tả">
                        <span asp-validation-for="Contents" class=" alert-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Img">Img</label>
                        <input type="text" class="form-control mb-3" asp-for="Img" placeholder="Nhập hình ảnh">
                        <span asp-validation-for="Img" class=" alert-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Cost">Cost</label>
                        <input type="text" class="form-control mb-3" asp-for="Cost" placeholder="Nhập giá tiền">
                        <span asp-validation-for="Cost" class=" alert-danger"></span>
                    </div>
                    
                    
                    
                </div>
                <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
                <a asp-asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning p-2"> Quay lại</a>
            </div>
        </form>
    </div>
</main>