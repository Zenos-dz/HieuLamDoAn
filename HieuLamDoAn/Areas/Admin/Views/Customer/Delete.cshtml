@model HieuLamDoAn.Models.Customer
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xác nhận xoá </h2>
	</div>
	<div class="from-row">
		<div class="form-group col-md-6">
			<label asp-for="CustomerID">CustomerID</label>
			<input type="text" class="form-control mb-3" asp-for="CustomerID" disabled />
		</div>
		<div class="form-group col-md-6">
			<label asp-for="Name">Name</label>
			<input type="text" class="form-control mb-3" asp-for="Name" disabled />
		</div>
	</div>
	<!-- Begin Form -->
	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="CustomerID" />
		<a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
			<i class="bi bi-arrow-left-circle"></i> Quay lại
		</a>
		<button type="submit" class="btn btn-lg btn-danger p-2">
			<i class="bi bi-trash-fill"></i> Xoá 
		</button>
	</form>
	<!-- End Form-->
</main>