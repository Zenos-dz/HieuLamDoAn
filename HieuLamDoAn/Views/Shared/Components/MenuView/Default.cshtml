@using HieuLamDoAn.Models;
@model IList<Menu>
<!-- Navbar & Hero Start -->
<div class="container-xxl position-relative p-0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0">
        <a href="" class="navbar-brand p-0">
            <h1 class="text-primary m-0"><i class="fa fa-utensils me-3"></i>Restoran</h1>
            <!-- <img src="~/img/logo.png" alt="Logo"> -->
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="fa fa-bars"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto py-0 pe-4">
                @foreach (var menu in Model.Where(m => m.Levels == 1).OrderBy(n => n.MenuOrder))
                {
                    var Pid = menu.MenuID;
                    var Smenu = Model.Where(p => p.ParentID == Pid).OrderBy(p => p.MenuOrder).ToList();
                    @if (Smenu.Count == 0)
                    {
                        <a href="@menu.Link" class="nav-item nav-link ">@menu.MenuName</a>
                    }
                    else
                    {
                        <div class="nav-item dropdown">
                            <a href="" class="nav-link dropdown-toggle">@menu.MenuName</a>
                        </div>
                        <div class="dropdown-menu m-0">
                            @foreach (var smn in Smenu)
                            {
                                <a href="" class="dropdown-item"> @smn.MenuName</a>
                            }
                        </div>
                    }
                }
            </div>
            <a href="" class="btn btn-primary py-2 px-4">Book A Table</a>
        </div>
    </nav>
</div>
<!-- Navbar & Hero End -->