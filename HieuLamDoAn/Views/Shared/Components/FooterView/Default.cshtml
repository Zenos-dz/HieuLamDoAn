@using HieuLamDoAn.Models;
@model IList<Footer>
<!-- Footer Start -->
<!-- Footer Start -->
<div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Company</h4>
                @foreach (var db in Model){
                    <a class="btn btn-link" href="">@db.Company</a>
                }
                
            </div>
            <div class="col-lg-3 col-md-6">
                <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Contact</h4>
                @foreach(var cc in Model)
                {
                    <p class="mb-2"><i class="@cc.IconContact"></i>@cc.Contact</p>
                }
                <div class="d-flex pt-2">
                    @foreach(var cdm in Model)
                    {
                        if (string.IsNullOrEmpty(@cdm.IconSocial)) continue;
                        <a class="btn btn-outline-light btn-social" href="@cdm.LinkSM">
                            <i class="@cdm.IconSocial"></i>
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                
                    <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Opening</h4>
                    @foreach(var hi in Model)
                    {
                        <h5 class="text-light fw-normal">@hi.Opening</h5>
                        <p>@hi.TimeOpen</p>
                    }
                
            </div>
            <div class="col-lg-3 col-md-6">
				<h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">Newsletter</h4>
                @foreach(var cl in Model)
                {
                    <p>@cl.Newsletter</p>
                }
                
                
                <div class="position-relative mx-auto" style="max-width: 400px;">
                    <input class="form-control border-primary w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                    <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">SignUp</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="copyright">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    @foreach(var nn in Model)
                    {
                        <a class="no-border-bottom" href="#">@nn.Infomation</a>
                    }
                    
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="footer-menu">
                        <a href="">Home</a>
                        <a href="">Cookies</a>
                        <a href="">Help</a>
                        <a href="">FQAs</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer End -->
